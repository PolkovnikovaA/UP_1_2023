<Page x:Class="Zadanie_1_UP.Glavnaya"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zadanie_1_UP"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="Glavnaya">

    <Grid Height="800" Width="1400">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="47"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <WrapPanel Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   Width="1400">
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Введите название для поиска: " 
                           Width="296" TextAlignment="Right" 
                           Foreground="White"
                           FontStyle="Normal"
                           FontFamily="Monotype Corsiva"
                           FontSize="20" Height="22"
                           Margin="0,10,0,0"/>

                <TextBox Width="230"
                         x:Name="TBoxSearch"
                         FontSize="15"
                         Margin="10,10,0,0" Height="28"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Выберите тип: "
                           Foreground="White"
                           Width="151"
                           Margin="10,10,0,0"
                           FontFamily="Monotype Corsiva"
                           TextAlignment="Right" FontSize="20" Height="26"/>

                <ComboBox Width="211"
                          Name="ComboType"
                          DisplayMemberPath="Title" Height="26"
                          Margin="10,10,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="AddMaska"
                           Text="Добавить"
                           Margin="100,5,0,0"
                           FontFamily="Monotype Corsiva"
                           FontSize="20" 
                           FontWeight="Bold" 
                           TextDecorations="Underline"
                           Foreground="White" 
                           Cursor="Hand" />

                <TextBlock x:Name="Back"
                           Text="Назад"
                           Margin="100,5,0,0"
                           FontFamily="Monotype Corsiva"
                           FontSize="20" 
                           FontWeight="Bold" 
                           TextDecorations="Underline"
                           Foreground="White" 
                           Cursor="Hand" />
            </StackPanel>
        </WrapPanel>

    </Grid>
</Page>
