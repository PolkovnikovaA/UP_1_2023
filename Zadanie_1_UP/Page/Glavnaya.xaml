<Page x:Class="Zadanie_1_UP.Glavnaya"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zadanie_1_UP"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="Glavnaya">

    <Grid Height="800" Width="1400">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="66"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <WrapPanel Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   Width="1400">
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Введите название для поиска: " 
                           Width="350" TextAlignment="Right" 
                           Foreground="White"
                           FontStyle="Normal"
                           FontFamily="Monotype Corsiva"
                           FontSize="30" Height="36"
                           Margin="15,15,0,0"/>

                <TextBox Width="264"
                         x:Name="TBoxSearch"
                         FontSize="30"
                         FontFamily="Monotype Corsiva"
                         Margin="10,15,0,0" Height="34"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Выберите тип: "
                           Foreground="White"
                           Width="192"
                           Margin="10,15,0,0"
                           FontFamily="Monotype Corsiva"
                           TextAlignment="Right" FontSize="30" Height="36"/>

                <ComboBox Width="242"
                          Name="ComboType"
                          DisplayMemberPath="Title" Height="38"
                          Margin="10,15,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="253">
                <TextBlock x:Name="AddMaska"
                           Text="Добавить"
                           Margin="10,5,0,0"
                           FontFamily="Monotype Corsiva"
                           FontSize="20" 
                           FontWeight="Bold" 
                           TextDecorations="Underline"
                           Foreground="White" 
                           Cursor="Hand" />
                <TextBlock x:Name="Back"
                           Text="Назад"
                           FontFamily="Monotype Corsiva"
                           FontSize="30" 
                           FontWeight="Bold" 
                           TextDecorations="Underline"
                           Foreground="White" 
                           Margin="80,15,0,0"
                           Cursor="Hand" Height="32" Width="84"
                           MouseLeftButtonDown="Glavnaya_Nazad"/>
            </StackPanel>
        </WrapPanel>

    </Grid>
</Page>
