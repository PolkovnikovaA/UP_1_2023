<Page x:Class="Zadanie_1_UP.Glavnaya"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zadanie_1_UP"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="Glavnaya">

    <Grid Height="800" Width="1400">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="66"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <WrapPanel Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   Width="1400" Height="55">
            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Поиск: " 
                           Width="94" TextAlignment="Right" 
                           Foreground="White"
                           FontStyle="Normal"
                           FontFamily="Monotype Corsiva"
                           FontSize="30" Height="32"
                           Margin="15,5,0,0"/>

                <TextBox Width="221"
                         x:Name="TBoxSearch"
                         FontSize="30"
                         FontFamily="Monotype Corsiva"
                         Margin="10,5,0,0" Height="38"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Сортировка: "
                           Foreground="White"
                           Width="150"
                           Margin="10,5,0,0"
                           FontFamily="Monotype Corsiva"
                           TextAlignment="Right" FontSize="30" Height="36"/>

                <ComboBox Width="207"
                          Name="ComboType"
                          DisplayMemberPath="Title" Height="40"
                          Margin="10,5,0,0"/>

                <TextBlock Text="Фильтрация: "
                           Foreground="White"
                           Width="161"
                           Margin="10,5,0,0"
                           FontFamily="Monotype Corsiva"
                           TextAlignment="Right" FontSize="30" Height="36"/>

                <ComboBox Width="207"
                          Name="ComboType2"
                          DisplayMemberPath="Title" Height="40"
                          Margin="10,5,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Width="284" Height="55">
                <Image Source="/Image/Analiz.png"
                       Height="40" Width="40"
                       Margin="30,5,0,0"/>

                <Image Source="/Image/Resultat.png"
                       Height="40" Width="40"
                       Margin="30,5,0,0"/>

                <TextBlock x:Name="Back"
                           Text="Выход"
                           FontFamily="Monotype Corsiva"
                           FontSize="30" 
                           FontWeight="Bold" 
                           TextDecorations="Underline"
                           Foreground="White" 
                           Margin="45,5,0,0"
                           Cursor="Hand" 
                           Height="32" Width="84"
                           MouseLeftButtonDown="Glavnaya_Nazad"/>
            </StackPanel>
        </WrapPanel>

        <ListView Grid.Row="1"
                  x:Name="LViewTours"
                  ItemsSource="{Binding Service}" 
                  Margin="0,0,0,87">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" 
                            BorderBrush="Black" 
                            CornerRadius="5">

                        <Grid Margin="0" 
                              HorizontalAlignment="Stretch">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="1"
                                        Margin="15"
                                        Orientation="Horizontal">
                                <Image Source="/Image/zagl.jpg"
                                       Height="100" Width="160"
                                       HorizontalAlignment="Left"/>
                                <StackPanel Grid.Column="1"
                                            Margin="0"
                                            Orientation="Vertical">
                                    <TextBlock Text="{Binding service1}"
                                               Name="Ser"
                                               FontFamily="Monotype Corsiva"
                                               FontSize="30"/>
                                    <TextBlock Text="{Binding price}"
                                               FontFamily="Monotype Corsiva"
                                               FontSize="30"/>
                                    <TextBlock Text="{Binding MaterialString}"
                                               FontFamily="Monotype Corsiva"
                                               FontSize="30"/>
                                </StackPanel>

                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</Page>
