<Page x:Class="Zadanie_1_UP.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zadanie_1_UP"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="Reg">

    <Grid Height="800" Width="1400">

        <Border Background="#77A8A3"
                Height="650" Width="850" 
                Margin="200,50,200,50"
                CornerRadius="80"/>

        <TextBox x:Name="login" 
                 Margin="0,185,0,0" 
                 TextWrapping="Wrap" 
                 Height="60" 
                 FontFamily="Monotype Corsiva" 
                 Width="520" 
                 FontSize="50" 
                 VerticalAlignment="Top" />

        <TextBox x:Name="password" 
                 FontSize="50" 
                 Margin="0,315,0,0" 
                 FontFamily="Monotype Corsiva" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Height="60" 
                 Width="520" />

        <TextBlock x:Name="registration" 
                   Text="Зарегистрироваться" 
                   TextDecorations="Underline" 
                   TextAlignment="Center" 
                   FontFamily="Monotype Corsiva" 
                   TextWrapping="WrapWithOverflow" 
                   HorizontalAlignment="Center" 
                   Width="500" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   FontSize="60" 
                   Margin="0,542,0,92" 
                   Cursor="Hand" 
                   MouseLeftButtonDown="Reg_Reg"/>

        <TextBlock x:Name="back" 
                   Text="Вернуться назад" 
                   TextDecorations="Underline" 
                   TextAlignment="Center" 
                   TextWrapping="WrapWithOverflow" 
                   HorizontalAlignment="Left" 
                   Width="259" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   FontSize="40" 
                   Margin="802,663,0,92" 
                   FontFamily="Monotype Corsiva" 
                   Cursor="Hand"
                   MouseLeftButtonDown="Reg_Nazad"/>

        <TextBox x:Name="password_Copy" 
                 FontSize="50" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Height="60" 
                 FontFamily="Monotype Corsiva"
                 Width="520" 
                 Margin="0,439,0,0" />

        <Label Content="Логин" 
               Margin="0,125,0,0" 
               VerticalAlignment="Top" 
               FontSize="50" 
               Height="60" 
               Width="128" 
               HorizontalAlignment="Center" 
               Foreground="White" 
               FontWeight="Normal" 
               FontStyle="Normal" 
               FontFamily="Monotype Corsiva"/>

        <Label Content="Пароль" 
               HorizontalAlignment="Center" 
               Margin="0,250,0,0" 
               VerticalAlignment="Top" 
               FontSize="50" 
               Height="60" 
               Width="150" 
               Foreground="White" 
               FontWeight="Normal" 
               FontStyle="Normal" 
               FontFamily="Monotype Corsiva"/>

        <Label Content="Повторите пароль" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               FontSize="50" 
               Height="60" 
               Width="380" 
               Foreground="White" 
               FontWeight="Normal" 
               FontStyle="Normal" 
               FontFamily="Monotype Corsiva" Margin="0,380,0,0"/>
    </Grid>
</Page>
